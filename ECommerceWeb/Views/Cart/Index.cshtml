@model IEnumerable<ECommerceWeb.Models.Carts>

@{
    ViewBag.Title = "Index";
}
<div class="p-3 mb-6 bg-light rounded-4">
    <div class="container-fluid py-5">
        <h1 class="display-7 fw-bold">Cart</h1>
    </div>
</div>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Products.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quantity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TotalPrice)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Products.Name)
            </td>
            <td>
                <form action="/Cart/UpdateCart">
                    <input type="hidden" value="@item.CartId" name="cartid" id="cartid" />
                    <input type="number" name="quantity" id="quantity" value="@item.Quantity" class="form-control w-25 d-inline" />
                    <input type="submit" id="update" value="Update" class="btn btn-primary d-inline" />
                </form>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalPrice) $
            </td>
            <td>
                @Html.ActionLink("Delete", "Delete", new { id = item.CartId }, new { @class = "btn btn-primary" })
            </td>
        </tr>
    }
</table>
